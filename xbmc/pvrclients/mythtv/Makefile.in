LIBS   = -ldl
LIBDIR = @abs_top_srcdir@/addons/pvr.mythtv
LIB    = @abs_top_srcdir@/addons/pvr.mythtv/XBMC_Mythtv.pvr

SRCS=client.cpp \
	MythXml.cpp

include ../Makefile.include

clean:
	-rm -f $(OBJS) $(LIB) *.P *~
	$(MAKE) -C libmythxml clean

INCLUDES += -I../../linux

$(LIB): $(OBJS)
	$(MAKE) -C libmythxml
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -shared -g $(OBJS) $(LIBS) $(LIBDIRS) $(SILIB) -o $(LIB)
